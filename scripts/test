#!/usr/bin/ruby

failed = false

Dir.chdir('tests')

tests = ARGV.count > 0 ? ARGV : Dir.glob('*.ap')
tests.each do |test|
    result = `../bin/test #{test} 2>&1 | diff - #{test}.out`
    if !result.empty? || $? != 0
        (1..79).each { putc '-' }        
        puts
        puts "FAILED TEST: #{test}"
        (1..79).each { putc '-' }        
        puts
        puts result
        failed = true
    end
end



if failed 
    exit(-1)
else
    puts "All #{tests.length} tests passed."
end



