# jgtest exec on

main() Int {
    count mutable = 0
    fd mutable = File::open('UnicodeFile.txt', 'r')
    fd.peek()
    while fd.status == Io::StreamStatus::OK {
        ch = Utf8::get(fd)
        Utf8::put(Io::stdout(), ch)
        fd.peek()
        if ch != '\r'c { # Ignore \r chars that are added on Windows
            ++count
        }
    }
    Io::stdout().println(count.str)
    Io::stdout().flush()

    fd = File::open('UnicodeFile.txt', 'r')
    str = fd.readall()
    Io::print(str)
    Io::stdout().flush()
    ret 0
}
