# jgtest exec on
# Tests that control structures are usable as expressions
Val < Value {
    str String
    @init(pstr String) {
        str = pstr
    }
    @destroy() {
        Io::println("del #{str}")
    }
}

test_cond() {
    Io::println("test_cond")
    x = if true { "hello" } else { "false" }
    Io::println(x)
    Io::println(if false { "hello" } else { "false" })

    y = if true { Val("1") } else { Val("2") }
    Io::println(y.str)
    Io::println(if false { Val("3") } else { Val("4") }.str)

    z = if false {
        Val("5")
    } else if true {
        Val("6")
    } else {
        Val("7")
    }
    Io::println(z.str)

    w = if true { 1 } else { 2 }
    Io::println(w.str)
    Io::println(if false { 3 } else { 4 }.str)
}

test_let() {
    Io::println("test_let")
    x = let y = "bob" { y }
    Io::println(x)

    z mutable = let w = Val("1") { w }
    Io::println(z.str)

    z = let w = Val("2") { Val("3") }
    Io::println(z.str)

    Io::println(let y = "bill" { "mike" })
    Io::println(let y = "bill" { Val("mike") }.str)
}

